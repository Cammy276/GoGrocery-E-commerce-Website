# ===============================
# GoGrocery Environment Settings
# ===============================

# Database connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gogrocery

# Developer / admin account (full privileges)
DB_ADMIN_USER=root
DB_ADMIN_PASS=

# Application / customer account (limited privileges)
DB_USER=gogrocery_customer
DB_PASS=StrongCustomerPassword123!

# App environment (local, staging, production)
APP_ENV=local

# Debug mode (true = show errors, false = hide errors)
APP_DEBUG=true

# Application URL (adjust if using built-in server or WAMP/XAMPP)
APP_URL=http://localhost/gogrocery
